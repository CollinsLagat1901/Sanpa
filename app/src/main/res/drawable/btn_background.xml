<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state (button is clicked) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent center when pressed -->
            <corners android:radius="15dp" />
            <stroke android:width="2dp" android:color="#D4A13D" /> <!-- Border color when pressed -->
            <padding android:left="10dp" android:right="10dp" android:top="5dp" android:bottom="5dp"/>
        </shape>
    </item>

    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent center for disabled state -->
            <corners android:radius="15dp" />
            <stroke android:width="2dp" android:color="#888888" /> <!-- Border for disabled state -->
        </shape>
    </item>

    <!-- Default/normal state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent center -->
            <corners android:radius="15dp" />
            <stroke android:width="2dp" android:color="#CCA848" /> <!-- Border color -->
            <padding android:left="10dp" android:right="10dp" android:top="5dp" android:bottom="5dp"/>
        </shape>
    </item>

</selector>
